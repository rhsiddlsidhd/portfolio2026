{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "es2020",
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*.ts", "db.json"],
  "exclude": ["node_modules", "dist"]
}
